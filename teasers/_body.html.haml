- if true # logo exists?
  #logo
    %img{:src=>"/uploads/rcreative.png", :alt=>""}/

%form{:action=>"/teasers/show/"}
  - if flash[:thanks]
    %h1 Thank You!
    %p We&#8217;ll be in touch.
  - else
    - if true # title exists?
      %h1= h "Join Our Mailing List"
    
    - if errors_on? :subscriber
      %p.errors Please enter a valid email address.
    - else
      - if true # description exists?
        %p= h "Enter your name and email below to be notified when our website goes live."
    
    %fieldset
      %p
        %label{:for=>'subscriber_name'} Name
        %input.textbox{:type => 'text', :name=>'subscriber[name]', :id=>'subscriber_name', :value=>""}/
      %p
        %label{:for=>'subscriber_email'} Email
        %input.textbox{:type => 'text', :name=>'subscriber[email]', :id=>'subscriber_email', :value=>""}/
    
    .buttons
      %input.button{:type=>"submit", :value=>"Submit"}/